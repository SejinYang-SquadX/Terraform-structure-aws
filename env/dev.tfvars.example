aws_region   = "ap-northeast-1"
project_name = "dev-app"
vpc_cidr     = "10.20.0.0/16"

public_subnets = [
  { cidr = "10.20.1.0/24", az = "ap-northeast-1a" },
  { cidr = "10.20.2.0/24", az = "ap-northeast-1c" }
]

private_subnets = [
  { cidr = "10.20.11.0/24", az = "ap-northeast-1a" },
  { cidr = "10.20.12.0/24", az = "ap-northeast-1c" }
]

nat_gateway_enabled = true

tags = {
  Environment = "dev"
  Owner       = "changeme"
}

allowed_ssh_cidr      = "0.0.0.0/0"
ssh_key_name          = "dev-app-key"
ssh_private_key_path  = "keys/dev-app-dev.pem"
public_instance_type  = "t3.micro"
private_instance_type = "t3.micro"

env_bucket_name               = ""
env_object_key                = "app.env"
env_bucket_allowed_principals = []

ecr_repository_name      = "dev-app-service"
ecr_image_tag_mutability = "MUTABLE"
ecr_lifecycle_policy     = null

ecs_container_image_tag   = "latest"
ecs_container_port        = 8080
ecs_desired_count         = 1
ecs_task_cpu              = 256
ecs_task_memory           = 512
ecs_health_check_path     = "/"
alb_ingress_cidrs         = ["0.0.0.0/0"]
ecs_log_retention_days    = 30
ecs_environment_variables = []

db_instance_class      = "db.t4g.micro"
db_allocated_storage   = 20
db_engine_version      = null
db_name                = "appdb"
db_username            = "appadmin"
db_password            = "CHANGE_ME"
db_multi_az            = false
db_backup_retention    = 7
db_skip_final_snapshot = true
